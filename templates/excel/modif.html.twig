{% extends 'base.html.twig' %}

{% block title %}Modifier ExcelData{% endblock %}

{% block body %}
    <div class="container">
        <div class="row">
            <div class="col-md-8 offset-md-2">
                <div class="card">
                    <div class="card-header">
                        <h3 class="card-title">Modifier ExcelData</h3>
                    </div>
                    <div class="card-body">
                        <form method="post">
                            {{ form_start(form) }}
                            <div class="form-group row">
                                <label class="col-sm-4 col-form-label">Compte Affaire</label>
                                <div class="col-sm-8">
                                    {{ form_widget(form.compteAffaire, {'attr': {'class': 'form-control'}}) }}
                                </div>
                            </div>
                            <!-- Ajoutez d'autres champs ici avec les dispositions Bootstrap -->
                            <div class="form-group row">
                                <div class="col-sm-12 text-right">
                                    <button type="submit" class="btn btn-primary">Modifier</button>
                                </div>
                            </div>
                            {{ form_end(form) }}
                            <div class="form-group row">
                                <div class="col-sm-12 text-center">
                                    <a href="{{ path('app_list') }}" class="btn btn-secondary">Retour Ã  la liste</a>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
